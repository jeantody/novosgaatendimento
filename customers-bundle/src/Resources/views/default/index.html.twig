{% extends "@NovosgaCustomers/base.html.twig" %}

{% trans_default_domain 'NovosgaCustomersBundle' %}

{% block body %}
    <div class="d-flex">
        <div>
            <h1>
                <i class="fa fa-address-book" aria-hidden="true"></i> {{ 'title'|trans }}
            </h1>
            <p>{{ 'subtitle'|trans }}</p>
        </div>
        <form class="ms-auto me-3 mt-3">
            <div class="input-group">
                <input type="text" class="form-control" name="q" placeholder="{{ 'label.search'|trans }}" value="{{ app.request.get('q') }}">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-secondary">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <div class="mt-3">
            <a href="{{ path('novosga_customers_new') }}" class="btn btn-primary ml-auto">
                <i class="fa fa-plus"></i>
                {{ 'button.new_customer'|trans }}
            </a>
        </div>
    </div>
    
    <table class="table table-hover border">
        <thead>
            <tr class="table-primary">
                <th>#</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.customer_id'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for cliente in clientes %}
                <tr>
                    <td>{{ cliente.id }}</td>
                    <td>{{ cliente.nome }}</td>
                    <td>{{ cliente.documento }}</td>
                    <td>{{ cliente.email }}</td>
                    <td class="text-end">
                        <a href="{{ path('novosga_customers_edit', { id: cliente.id }) }}" class="btn btn-secondary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
            
    {{ paginacao|raw }}
{% endblock %}
